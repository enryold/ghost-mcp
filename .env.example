# Ghost CMS Configuration
GHOST_API_URL=https://yourblog.com
GHOST_CONTENT_API_KEY=your_content_api_key_here
# Optional: Admin API key for accessing member-reserved posts (read-only)
GHOST_ADMIN_API_KEY=your_admin_api_key_here_optional
GHOST_API_VERSION=v5.0

# Authentication Configuration
# AUTH_TYPE options: NONE, BASIC, OAUTH
AUTH_TYPE=NONE

# Basic Authentication - Method 1: CSV file with tokens
# Path to CSV file containing tokens and member access permissions
AUTH_TYPE_BASIC_FILE_PATH=./auth-credentials.csv

# Basic Authentication - Method 2: 3rd party API validation
# Client ID representing the tenant/application
AUTH_TYPE_BASIC_CLIENT_ID=your_tenant_id
# API URL for token validation (POST /validate endpoint expected)
AUTH_TYPE_BASIC_API_URL=https://your-auth-api.com

# OAuth Configuration
# URL of the OAuth provider
AUTH_TYPE_OAUTH_URL=https://your-oauth-provider.com

# HTTP Server Configuration (for docker-compose.http.yml)
PORT=3000