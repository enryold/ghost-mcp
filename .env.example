# Ghost CMS Configuration
GHOST_API_URL=https://yourblog.com
GHOST_CONTENT_API_KEY=your_content_api_key_here
# Optional: Admin API key for accessing member-reserved posts (read-only)
GHOST_ADMIN_API_KEY=your_admin_api_key_here_optional
GHOST_API_VERSION=v5.0

# Authentication Configuration
# AUTH_TYPE options: NONE, BASIC, OAUTH
AUTH_TYPE=NONE

# Basic Authentication (CSV file)
# Path to CSV file containing access_key,secret_key pairs
AUTH_TYPE_BASIC_FILE_PATH=./auth-credentials.csv

# OAuth Configuration
# URL of the OAuth provider
AUTH_TYPE_OAUTH_URL=https://your-oauth-provider.com